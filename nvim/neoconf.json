{
    "phpunit.command": "docker exec -it cockpit-php",
    "phpunit.args": [
        "-c",
        "./tests/phpunit.xml", // Any args, check `phpunit --help`
        "--no-coverage",
    ],
    "phpunit.paths": {
        "${workspaceFolder}": "/opt/meteoviva" // ${workspaceFolder} is mapped to /opt/meteoviva
    },
    // "code-runner.fileDirectoryAsCwd": true,
    "code-runner.executorMap": {
        "php": "string=$fullFileName;prefix=\"$workspaceRoot/\";docker exec cockpit-php php -dxdebug.start_with_request=yes ${string#\"$prefix\"}",
    }
}
